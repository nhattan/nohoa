<%= form_for [:admin, @resource] do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="fields">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="fields">
		<%= f.submit (@resource.new_record? ? :Create : :Update), class: "btn btn-warning" %>
	</div>
<% end %>